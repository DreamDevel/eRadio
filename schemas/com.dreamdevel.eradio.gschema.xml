<schemalist>
        <schema id="com.dreamdevel.eradio.settings" path="/com/dreamdevel/eradio/settings/">
        <key name="stream-timeout" type="d">
            <default>1.4</default>
            <summary>Stream Timeout</summary>
            <description>
                How long should wait until drops station.
                (Not available in current version)
            </description>
        </key>
    </schema>
    <schema id="com.dreamdevel.eradio.saved-state" path="/com/dreamdevel/eradio/saved-state/">
        <key name="title-column-width" type="i">
            <default>190</default>
            <summary>Title column width</summary>
            <description>
                The width of the title column
            </description>
        </key>

        <key name="genre-column-width" type="i">
            <default>160</default>
            <summary>Genre column width</summary>
            <description>
                The width of the genre column
            </description>
        </key>

        <key name="window-width" type="i">
            <default>770</default>
            <summary>Window width</summary>
            <description>
                The width of the window
            </description>
        </key>

        <key name="window-height" type="i">
            <default>490</default>
            <summary>Window height</summary>
            <description>
                The height of the window
            </description>
        </key>
        
        <key name="sidebar-width" type="i">
            <default>160</default>
            <summary>Sidebar Width</summary>
            <description>
                The width of the sidebar
            </description>
        </key>
    </schema>
</schemalist>
