 public enum Radio.PlayerStatus {
    PLAYING,
    PAUSED,
    STOPPED;

    public string to_string() {
        switch (this) {
            case PLAYING :
                return "Playing";
            case PAUSED  :
                return "Paused";
            case STOPPED :
                return "Stopped";
            default :
                assert_not_reached();
        }
    }
 }